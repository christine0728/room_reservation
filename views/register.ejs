<!DOCTYPE html>
<!-- Coding By CodingNepal - codingnepalweb.com -->
<html lang="en">
<head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="{{ asset('sweetalert/sweetalert.min.js') }}"></script>

    <link rel="stylesheet" href="/css/main.css?version=4" />
</head>
<body>
    <center>  <br> <br>
      <div class="wrapper">
        <h2>Registration</h2>
        <% if (error && error.length > 0) { %>
          <div class="alert alert-danger">
            <%= error[0] %>
          </div>
        <% } %>
      
        <form action="/register-user" method="post" class="form2">
          <div class="row">
            <div class="col-6">
              <div class="input-box">
                <input type="text" id="firstname" name="firstname" placeholder="Firstname" required>
              </div>
            </div>

            <div class="col-6">
              <div class="input-box">
                <input type="text" id="lastname" name="lastname" placeholder="Lastname" required>
              </div>
            </div>

            <div class="col-6" style="margin-top: -2rem;">
              <div class="input-box">
                <div class="col-4">
                  <label style="font-size: large; float: left;"><b>Birthday:</b></label>
                </div>
                <div class="col-8">
                  <input type="date" id="birthday" name="birthday" placeholder="Birthday" required>
                </div>
              </div>
            </div>

            <div class="col-6" style="margin-top: -2rem;">
              <div class="input-box">
                <label style="font-size: large; float: left;"><b>Gender:</b></label>
                <select name="gender">
                  <option value="female">Female</option>
                  <option value="male">Male</option>
                </select>   
              </div>
            </div>

            <div class="col-6" style="margin-top: -3rem;">
              <div class="input-box">
                <input type="tex" id="address" name="address" placeholder="Address" required>
              </div>
            </div>

            <div class="col-6" style="margin-top: -3rem;">
              <div class="input-box">
                <input type="number" id="contact_no" name="contact_no" placeholder="Contact no." required>
              </div>
            </div>

            <div class="col-6" style="margin-top: -3rem;">
              <div class="input-box">
                <input type="text" id="username" name="username" placeholder="Username" required>
              </div>
            </div>

            <div class="col-6" style="margin-top: -3rem;">
              <div class="input-box">
                <input type="text" id="email" name="email" placeholder="Email" required>
              </div>
            </div>

            <div class="col-6" style="margin-top: -3rem;">
              <div class="input-box">
                <input type="password" id="password" name="password" placeholder="Create password" required>
              </div>
            </div>

            <div class="col-6" style="margin-top: -3rem;">
              <div class="input-box">
                <input type="password" id="confirmPassword" name="confirmPassword" placeholder="Confirm password" required>
              </div> 
            </div>

            <div class="col-12" style="margin-top: -2rem;">
              <div class="input-box button" style="width: 50%;">
                <input type="Submit" value="Register Now">
              </div>
              <div class="text">
                <h3>Already have an account? <a href="#">Login now</a></h3>
              </div>
            </div>

          </div>  
        </form>
      </div>
    </center>
</body>
</html>