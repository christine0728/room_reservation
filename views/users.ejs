                        <th>Username</th>
                        <th>Email</th>
                     
                    </tr>
                </thead>
                <tbody>
                    <% result.forEach(users => { %>
                        <tr>
                            <td><%= users.username %></td>
                            <td><%= users.email %></td>   
                          
                        
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </div>
</div>

</div>

    


