<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <%- include('../partials/scripts.ejs') %>
        <link rel="stylesheet" href="/css/home.css" />
        <script src="/js/home.js" defer></script>

        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>    
        <title>Avail Room</title>
    </head>
    <body>
        <%- include('../partials/cl_loggedin_nav.ejs') %>

        <div style="margin-top: 5rem; padding: 3rem;">
            <form action="/add_reservation" method="post">
                <% results1.forEach(res1 => { %>
                    <div class="row">
                        <div class="col-12">
                            <h1>Client Information</h1>
                        </div>
                        <input type="hidden" name="client_id" value="<%= res1.id %>" readonly> 
                        <div class="col-6">
                            <div class="mb-3">
                                <label for="exampleInputEmail1" class="form-label">Email address</label>
                                <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
                                <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
                              </div>
                            <b>Firstname: <input type="text" name="firstname" value="<%= res1.firstname %>" readonly></b>
                        </div>
                        <div class="col-6">
                            <b>Lastname: <input type="text" name="lastname" value="<%= res1.lastname %>" readonly></b> 
                        </div>
                        <div class="col-6">
                            <b>Birthday: <input type="text" name="birthday" value="<%= res1.birthday %>" readonly></b> 
                        </div>
                        <div class="col-6">
                            <b>Gender: <input type="text" name="gender" value="<%= res1.gender %>" readonly></b> 
                        </div>
                        <div class="col-6">
                            <b>Address: <input type="text" name="address" value="<%= res1.address %>" readonly></b> 
                        </div>
                        <div class="col-6">
                            <b>Contact no.: <input type="text" name="contact_no" value="<%= res1.contact_no %>" readonly></b> 
                        </div>
                        <div class="col-6">
                            <b>Email: <input type="text" name="email" value="<%= res1.email %>" readonly></b> 
                        </div>
                    </div>
                <% }); %>
                <hr>
                <% results2.forEach(res2 => { %>
                    <div class="row">
                        <div class="col-12">
                            <h1>Room Information</h1>
                        </div>
                        <input type="hidden" name="room_id" value="<%= res2.room_id %>" readonly>
                        <div class="col-6">
                            <b>Room number: <input type="text" name="room_num" value="<%= res2.room_number %>" readonly></b> 
                        </div>
                        <div class="col-6">
                            <b>Capacity: <input type="text" name="capacity" value="<%= res2.capacity %>" readonly></b>  
                        </div>
                        <div class="col-6">
                            <b>Amenities: <input type="text" name="amenities" value="<%= res2.amenities %>" readonly></b> 
                        </div>
                        <div class="col-6">
                            <b>Price: <input type="text" name="price" value="<%= res2.price %>" readonly></b> 
                        </div>
                    </div>
                <% }); %>
                <hr>
                <div class="row">
                    <div class="col-12">
                        <h1>Reservation Details</h1>
                    </div>
                    <div class="col-6">
                        Start date: <input type="date" name="start_date">
                    </div>
                    <div class="col-6">
                        End date: <input type="date" name="end_date">
                    </div>
                    <div class="col-12">
                        <input type="submit" name="add_reservation" value="Add Reservation">
                    </div>
                </div>
            </form>
        </div>
        
        <div class="footer">
            <span class="copyright-symbol">Casa De Kwarto &copy; 2023. All Rights Reserved.</span>
        </div> 
    </body>
</html>