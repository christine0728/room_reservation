<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <%- include('../partials/scripts.ejs') %>
        

        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>    

        <link rel="stylesheet" href="/css/home.css?version=4" />
        <script src="/js/home.js" defer></script>
        <title>Avail Room</title>
        <style>
            label {
                font-weight: bold;
                font-size: large
            }
            .form-control{
                font-size: large;
            }
        </style>
    </head>
    <body>
        <%- include('../partials/cl_loggedin_nav.ejs') %>

        <div style="margin-top: 5rem; padding: 6rem 13rem 13rem 13rem;">
            <form action="/add_reservation" method="post">
                <% results1.forEach(res1 => { %>
                    <div class="row" style="margin: 2rem 0rem 2rem 0rem;">
                        <div class="col-12" >
                            <h1>Client Information</h1>
                        </div>
                        <div style="margin-top: 1rem;"></div>
                        <input type="hidden" name="client_id" value="<%= res1.id %>" readonly> 
                        <div class="col-4">
                            <div class="mb-6">
                                <label>Fullname:</label>
                                <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" value="<%= res1.firstname %> <%= res1.lastname %>" readonly> 
                            </div>
                            <!-- <b>Firstname: <input type="text" name="firstname" value="<%= res1.firstname %>" readonly></b> -->
                        </div>
                        <div class="col-4">
                            <div class="mb-3">
                                <label>Address:</label>
                                <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" value="<%= res1.address %>" readonly> 
                            </div>
                            <!-- <b>Lastname: <input type="text" name="lastname" value="<%= res1.lastname %>" readonly></b>  -->
                        </div>
                        <div class="col-4">
                            <div class="mb-3">
                                <label>Email:</label>
                                <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" value="<%= res1.email %>" readonly> 
                            </div>
                            
                            <!-- <b>Birthday: <input type="date" name="birthday" value="<%= res1.birthday %>" readonly></b>  -->
                        </div>
                        <div class="col-4">
                            <div class="mb-3">
                                <label>Contact no.:</label>
                                <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" value="<%= res1.contact_no %>" readonly> 
                            </div>
                        </div>
                        <div class="col-4">
                            <div class="mb-3">
                                <label>Birthday:</label>
                                <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" value="<%= res1.birthday %>" readonly> 
                            </div>
                        </div>
                        <div class="col-4">
                            <div class="mb-3">
                                <label>Gender:</label>
                                <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" value="<%= res1.gender %>" readonly> 
                            </div>
                        </div> 
                    </div>
                <% }); %>
                <hr>
                <% results2.forEach(res2 => { %>
                    <div class="row" style="margin: 2rem 0rem 2rem 0rem;">
                        <div class="col-12" style="margin-top: 1rem;">
                            <h1>Room Information</h1>
                        </div>
                        <input type="hidden" name="room_id" value="<%= res2.room_id %>" readonly>
                        <div style="margin-top: 1rem;"></div>
                        <div class="col-3">
                            <label>Room number:</label>
                            <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" value="<%= res2.room_number %>" readonly> 
                            <!-- <b> <input type="text" name="room_num" value=">" readonly></b>  -->
                        </div>
                        <div class="col-3">
                            <label>Capacity:</label>
                            <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" value="<%= res2.capacity %> people" readonly>
                            <!-- <b> <input type="text" name="capacity" value="" readonly></b>   -->
                        </div>
                        <div class="col-3">
                            <label>Amenities:</label>
                            <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" value="<%= res2.amenities %>" readonly>
                            <!-- <b> <input type="text" name="amenities" value="" readonly></b>  -->
                        </div>
                        <div class="col-3">
                            <label>Price:</label>
                            <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" value="<%= res2.price %> pesos" readonly>
                            <!-- <b> <input type="text" name="price" value="" readonly></b>  -->
                        </div>
                    </div>
                <% }); %>
                <hr>
                <div class="row" style="margin: 2rem 0rem 2rem 0rem;">
                    <div class="col-12">
                        <h1>Reservation Details</h1>
                    </div>
                    <div class="col-6">
                        <label>Start date:</label>
                        <input type="date" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="start_date"> 
                    </div>
                    <div class="col-6">
                        <label>End date</label>
                        <input type="date" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="end_date"> 
                    </div>
                    <div class="col-12" style="float: right; padding: 1rem;">
                        <input type="submit" class="button" name="add_reservation" value="Add Reservation">
                    </div>
                </div>
            </form>
        </div>
        
        <div class="footer">
            <span class="copyright-symbol">Casa De Kwarto &copy; 2023. All Rights Reserved.</span>
        </div> 
    </body>
</html>