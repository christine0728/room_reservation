<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <%- include('../partials/scripts.ejs') %>
        <link rel="stylesheet" href="/css/home.css" />
        <script src="/js/home.js" defer></script>
        <title>Profile</title>
        <style>
            label{
                font-size: large !important;
            }
            .form-control{
                font-size: large !important;
            }
        </style>
    </head>
    <body style="background-color: white;">
        <%- include('../partials/cl_loggedin_nav.ejs') %>

        <div style="margin-top: 2rem; padding: 5rem 12rem 4rem 12rem">
            <div class="col-12" style="margin: 2rem 2rem 2rem 0rem;">
                <h1><b>Profile</b></h1> 
                
                <% results1.forEach(res1 => { %>
                    <div class="row" style="margin: 4rem 0rem 2rem 0rem;">
                        <div style="margin-top: 1rem;"></div>
                        <input type="hidden" name="client_id" value="<%= res1.id %>"> 
                        <div class="col-4">
                            <div class="mb-6">
                                <label>Firstname:</label>
                                <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" value="<%= res1.firstname %> <%= res1.lastname %>" name="firstname" readonly> 
                            </div> 
                        </div>
                        <!-- <div class="col-4">
                            <div class="mb-6">
                                <label>Lastname:</label>
                                <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" value="<%= res1.lastname %>" name="lastname"> 
                            </div> 
                        </div> -->
                        <div class="col-4">
                            <div class="mb-3">
                                <label>Address:</label>
                                <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" value="<%= res1.address %>" name="address" readonly> 
                            </div> 
                        </div>
                        <div class="col-4">
                            <div class="mb-3">
                                <label>Email:</label>
                                <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" value="<%= res1.email %>" name="email" readonly> 
                            </div> 
                        </div>
                        <div class="col-4">
                            <div class="mb-3">
                                <label>Contact no.:</label>
                                <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" value="<%= res1.contact_no %>" name="contact_no" readonly> 
                            </div>
                        </div>
                        <div class="col-4">
                            <div class="mb-3">
                                <label>Birthday:</label>
                                <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" value="<%= new Intl.DateTimeFormat('en-US', { month: 'short', day: 'numeric', year: 'numeric' }).format(new Date(res1.birthday)) %>" readonly> 
                            </div>
                        </div>
                        <div class="col-4">
                            <div class="mb-3">
                                <label>Gender:</label>
                                <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" value="<%= res1.gender %>" readonly> 
                                <!-- <select class="form-control" name="gender" value="<%= res1.gender %>">
                                    <option value="female">Female</option>
                                    <option value="male">Male</option>
                                </select> -->
                            </div>
                        </div>  
                    </div>
                        <div class="col-12">
                            <a href="/edit_profile/<%= client_id %>" class="button" style="float: right; margin: 0rem;">Edit profile</a>
                        </div>
                    </div>
                <% }); %>
            </div>
        </div>
        <div class="footer" style="position: fixed;">
            <span class="copyright-symbol">Casa De Kwarto &copy; 2023. All Rights Reserved.</span>
        </div> 
    </body>
    
</html>